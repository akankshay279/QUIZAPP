import java.util.Scanner;

public class QuizApp {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        String[] questions = {
            "What is the capital of India?",
            "Who wrote the Ramayana?",
            "What is 5 + 3?",
            "Which language is used for Android app development?",
            "Which is the largest ocean in the world?"
        };

        String[][] options = {
            {"1. Mumbai", "2. Delhi", "3. Kolkata", "4. Chennai"},
            {"1. Tulsidas", "2. Valmiki", "3. Kalidasa", "4. Vyasa"},
            {"1. 6", "2. 7", "3. 8", "4. 9"},
            {"1. Python", "2. Java", "3. Swift", "4. C"},
            {"1. Atlantic", "2. Indian", "3. Pacific", "4. Arctic"}
        };

        int[] answers = {2, 2, 3, 2, 3};

        int score = 0;

        System.out.println("ğŸ‰ Welcome to the Quiz App! ğŸ‰");
        System.out.println("Answer the following questions:\n");

        for (int i = 0; i < questions.length; i++) {
            System.out.println("Q" + (i + 1) + ": " + questions[i]);

            
            for (int j = 0; j < options[i].length; j++) {
                System.out.println(options[i][j]);
            }

            System.out.print("Enter your answer (1-4): ");
            int userAnswer = sc.nextInt();

            if (userAnswer == answers[i]) {
                System.out.println("âœ… Correct!\n");
                score++;
            } else {
                System.out.println("âŒ Wrong! Correct answer: " + options[i][answers[i] - 1] + "\n");
            }
        }

       
        System.out.println("ğŸ¯ Quiz Over!");
        System.out.println("ğŸ’« Your final score: " + score + "/" + questions.length);

        if (score == questions.length) {
            System.out.println("ğŸŒŸ Youâ€™re a genius!");
        } else if (score >= 3) {
            System.out.println("ğŸ‘ Good job!");
        } else {
            System.out.println("ğŸ˜… Try again to improve!");
        }

        sc.close();
    }
}
